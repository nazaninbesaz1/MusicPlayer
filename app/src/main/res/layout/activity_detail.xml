<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailSongActivity"
    android:orientation="vertical"
    android:layout_margin="8dp"
    android:background="#Aee">

    <ImageView
        android:id="@+id/imgSong"
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/img"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:padding="5dp"/>

    <TextView
        android:id="@+id/txtNameSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="name Song"
        android:layout_gravity="left"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"/>

    <TextView
        android:id="@+id/txtNameArtist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="name Song"
        android:layout_gravity="left"
        android:textColor="#3F51B5"
        android:textSize="16sp"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:id="@+id/tv_current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="15sp"
            android:textStyle="bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/tv_total_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:textSize="15sp"
            android:textStyle="bold" />
    </LinearLayout>


    <SeekBar
        android:id="@+id/sekBar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

          <ImageView
              android:layout_width="40dp"
              android:layout_height="40dp"
              android:src="@drawable/ic_baseline_skip_previous_24"
              android:layout_marginLeft="10dp"
              android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/imgPlay"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_play_arrow_24"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>


            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_skip_next_24"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
       >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_access_time_24"/>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:layout_margin="8dp"
            />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_weight="0.5"/>

        <TextView
            android:id="@+id/txtNumberPlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_arrow_circle_down_24"/>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="8dp">


            <TextView
                android:id="@+id/textSong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Song"
                android:textSize="15sp"
                android:layout_margin="8dp"
                android:textColor="#011270"
                android:textAlignment="center"
                android:layout_gravity="center"/>
    </LinearLayout>

    </ScrollView>



</LinearLayout>